@model ProductFormViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <p><strong>Price:</strong> @Model.Price</p>
            <p><strong>Quantity in Stock:</strong> @Model.Quantity</p>
            <p><strong>Manufacturer:</strong> @Model.ManufacturerName</p>
            <p><strong>Category:</strong> @Model.CategoryName</p>
            <p><strong>Rating:</strong> @Model.Rating</p>
            <div class="btn-group mt-3">
                <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                <button type="button" class="btn btn-sm btn-outline-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
            </div>
        </div>
    </div>
</div>